#include "Configure.h"
#include "Dictionary.h"
#include "Index.h"

using std::string;

int main()
{
	Configure* configure=Configure::getInstance();
	string source1=configure->getPathFor("source1");
	string source2=configure->getPathFor("source2");
	string source3=configure->getPathFor("source3");
	string stop=configure->getPathFor("stop");
	string diction=configure->getPathFor("diction");
	string exclude=configure->getPathFor("exclude");

	Dictionary* dictionary=Dictionary::getInstance();
	dictionary->addDictionFrom(source1);
	dictionary->addDictionFrom(source2);
	dictionary->addDictionFrom(source3);
	dictionary->addExcludeFrom(stop);
	dictionary->putDictionTo(diction);
	dictionary->putExcludeTo(exclude);

	return 0;
}
